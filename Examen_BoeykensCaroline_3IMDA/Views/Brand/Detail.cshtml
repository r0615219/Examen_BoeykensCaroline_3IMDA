@model BrandEditViewModel

@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.Brand) ? "Add New Brand" : "Changing the info for: " + Model.Brand;
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <form asp-action="Save" asp-controller="Brand">
        <div class="row">
            <div class="col-lg-2">
                <label asp-for="Model">Model:</label>
            </div>
            <div class="col-lg-10">
                <input asp-for="Model"/>
                <span asp-validation-for="Model" style="color: red"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                <label asp-for="Brand">Brand:</label>
            </div>
            <div class="col-lg-10">
                <input asp-for="Brand"/>
                <span asp-validation-for="Brand" style="color: red"></span>
            </div>
        </div>
        
        <div asp-validation-summary="All"></div>

        <input type="hidden" asp-for="Id"/>
        <input type="submit"/>
    </form>
   
</div>
